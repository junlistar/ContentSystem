@{
    ViewBag.Title = "订单列表";
}
@section head{

    <link href="/Content/asDatepicker.css" rel="stylesheet" />
    <style type="text/css">
        .calendar-icon {
            display: none;
        }
    </style>
}
@model ContentSystem.Models.OrderVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/Order/List" method="get">
                            <div class="col-sm-12">
                                <div class="col-sm-4">
                                    点击同步订单数据：

                                </div>
                                <button class="btn btn-success btn-initorder"><i class="fa fa-check padding-right-4"></i>&nbsp;同步订单</button>
                            </div>
                            <div class="col-sm-12" style="height:20px;"></div>
                            <div class="hr-line-dashed"></div>
                            <div class="col-sm-12">
                                <div class="col-sm-4">
                                    输入年份同步假期数据：
                                    <input type="text" name="txtYear" id="txtYear" class="form-control inline" style="width:70%;" placeholder="请输入年份，如：2018" value="@DateTime.Now.Year">
                                </div>
                                <button class="btn btn-success btn-inityear"><i class="fa fa-check padding-right-4"></i>&nbsp;同步假期数据</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script src="/Scripts/jquery-asDatepicker.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {


            $(".btn-inityear").click(function () {
                var _year = $("#txtYear").val();
                if (_year != "") {
                    var dataArr = {
                        year: _year,
                    };
                    $.post('/GrabData/InitYear', dataArr, function (data) {
                        if (data.Status == 200) {
                            swal("提示", "操作成功");
                        }
                        if (data.Status == 202) {
                            swal("提示", "操作失败");
                        }
                    }).complete(function () { window.parent.hideModal(); });
                }
            })
            $(".btn-initorder").click(function () {

                var dataArr = {
                };
                $.post('/GrabData/GrabOrderData', dataArr, function (data) {
                    if (data.Status == 200) {
                        swal("提示", "操作成功");
                    }
                    if (data.Status == 202) {
                        swal("提示", "操作失败");
                    }
                }).complete(function () { window.parent.hideModal(); });
            }
            })
        });
    </script>
}

