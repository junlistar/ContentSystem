@{
    ViewBag.Title = "系统帐号";
}
@model ContentSystem.Models.SysAccountVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/SysAccount/List" method="get">

                            <div class="col-sm-12">
                                <div class="col-sm-4">
                                    <label style="width:100px;"> 用户昵称：</label>
                                    <input type="text" name="QueryName" class="form-control inline" style="width:70%;" placeholder="请输入查询用户昵称" value="@(Model.QueryName ?? "")">
                                </div>
                                <button type="submit" class="btn btn-info">搜索</button>
                            </div>

                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">编号</th>
                                    <th class="text-center">帐号</th>
                                    <th class="text-center">昵称</th>
                                    <th class="text-center">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.SysAccountId</td>
                                            <td class="text-center">@item.Account</td>
                                            <td class="text-center">@item.Name</td>
                                            <td class="text-center">
                                                @item.CreateTime
                                            </td>
                                            <td>
                                                <a href="/SysAccount/Edit/@item.SysAccountId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                <button onclick="del('/SysAccount/Delete','/UserInfo/List','@item.SysAccountId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/SysAccount/Edit" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>
                                <a href="/SysAccount/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
